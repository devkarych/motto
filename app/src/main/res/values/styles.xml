<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_activity_layout</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
    </style>

    <style name="textViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="textViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="textViewUnderRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="textViewUnderRegularItalic" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/patayya</item>
    </style>

    <style name="textViewMottoTypeRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="textViewSettingsRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="mottoCardView" parent="CardView">
        <item name="android:backgroundTint">@color/dark_item</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="FindMottoTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/pink</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="settingsNormalSwitch">
        <item name="colorControlActivated">@color/red</item>
        <item name="colorSwitchThumbNormal">@color/soft_white</item>
        <item name="android:colorForeground">@color/red</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="trackTint">@color/darker_item</item>
    </style>

    <style name="normalDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/darker_item</item>
        <item name="android:textColor">@color/pink</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/soft_white</item>
        <item name="backgroundTint">@color/darker_item</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/red</item>
        <item name="backgroundTint">@color/darker_item</item>
    </style>
</resources>